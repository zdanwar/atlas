{
  "name": "cliro",
  "version": "2.0.0",
  "description": "AI-Powered Document Processing & Odoo Integration Platform",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node odoo-mcp-server.js",
    "dev": "nodemon odoo-mcp-server.js",
    "test": "jest",
    "test:integration": "./test_integration.sh",
    "benchmark": "node benchmark_gpu.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "ocr": "node ocr-mcp-server.js",
    "setup": "npm install && pip install -r requirements.txt",
    "build": "npm run format && npm run lint",
    "docs": "jsdoc -c jsdoc.conf.json"
  },
  "keywords": [
    "ocr",
    "odoo",
    "mcp",
    "document-processing",
    "ai",
    "automation",
    "erp",
    "invoice-processing",
    "gpu-acceleration",
    "business-automation"
  ],
  "author": {
    "name": "CLIRO Team",
    "email": "team@cliro.ai",
    "url": "https://github.com/voundbrand/cliro"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:voundbrand/cliro.git"
  },
  "bugs": {
    "url": "https://github.com/voundbrand/cliro/issues"
  },
  "homepage": "https://github.com/voundbrand/cliro#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ]
  },
  "config": {
    "python_env": "./ocr-env/bin/python",
    "cache_dir": "./cache",
    "log_level": "info"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/voundbrand"
  }
}