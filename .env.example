# CLIRO Environment Configuration Template
# Copy this file to .env and update with your actual values

# =================================
# Odoo Configuration
# =================================
ODOO_HOSTNAME=your-company.odoo.com
ODOO_DATABASE=your-database-name
ODOO_USERNAME=your-username@company.com
ODOO_API_KEY=your-api-key-here

# SSL Configuration (for development only)
NODE_TLS_REJECT_UNAUTHORIZED=0

# =================================
# File Paths
# =================================
# Base directory for document processing
DOCUMENTS_PATH=/Users/yourusername/Documents/CLIRO
PURCHASE_FOLDER=/Users/yourusername/Documents/CLIRO/purchase
CACHE_DIRECTORY=./cache

# =================================
# OCR Configuration
# =================================
# GPU Settings (true for GPU acceleration, false for CPU only)
OCR_USE_GPU=true
OCR_DPI=300
OCR_MAX_PAGES=20

# Python Environment Path
PYTHON_ENV=./ocr-env/bin/python

# =================================
# Excel Configuration
# =================================
EXCEL_CELL_LIMIT=4000
EXCEL_OUTPUT_DIR=./output

# =================================
# Performance Settings
# =================================
# Maximum file size in MB
MAX_FILE_SIZE=50
# Processing timeout in milliseconds
PROCESSING_TIMEOUT=300000

# =================================
# Logging
# =================================
LOG_LEVEL=info
LOG_FILE=./logs/cliro.log

# =================================
# Security
# =================================
# Encryption key for sensitive data (generate a secure random key)
ENCRYPTION_KEY=generate-a-secure-random-key-here
# Session timeout in hours
SESSION_TIMEOUT=24

# =================================
# Development Settings
# =================================
NODE_ENV=development
DEBUG=cliro:*

# =================================
# Feature Flags (for future releases)
# =================================
ENABLE_DIRECT_ODOO_IMPORT=false
ENABLE_EMAIL_MONITORING=false
ENABLE_FOLDER_WATCHING=false
ENABLE_BATCH_QUEUE=true

# =================================
# Database (for future use)
# =================================
# DATABASE_URL=sqlite:./data/cliro.db
# REDIS_URL=redis://localhost:6379